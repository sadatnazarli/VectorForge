# VectorForge Makefile

CXX = g++
CXXFLAGS = -std=c++17 -O3 -Wall -Wextra
SRC_DIR = cpp
BUILD_DIR = build
TARGET = $(BUILD_DIR)/vectorforge

# Source files
SOURCES = $(SRC_DIR)/main.cpp $(SRC_DIR)/vector_store.cpp
HEADERS = $(SRC_DIR)/vector_store.h

.PHONY: all clean cpp server install test

all: cpp server

# Build C++ executable
cpp: $(TARGET)

$(TARGET): $(SOURCES) $(HEADERS)
	@mkdir -p $(BUILD_DIR)
	@mkdir -p data
	$(CXX) $(CXXFLAGS) $(SOURCES) -o $(TARGET)
	@echo "✓ C++ executable built: $(TARGET)"

# Install NPM dependencies and build TypeScript server
server:
	@echo "Installing server dependencies..."
	@cd server && npm install
	@echo "Building TypeScript server..."
	@cd server && npm run build
	@echo "✓ Server built successfully"

# Install all dependencies
install:
	@echo "Installing server dependencies..."
	@cd server && npm install
	@echo "✓ Dependencies installed"

# Clean build artifacts
clean:
	rm -rf $(BUILD_DIR)
	rm -rf data/database.bin
	rm -rf server/dist
	rm -rf server/node_modules
	@echo "✓ Clean complete"

